{
  "name": "flocka-api",
  "version": "1.1.0",
  "description": "Flocka - デジタルプロフィールカード交換アプリのバックエンドAPI",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "db:generate": "wrangler d1 execute flocka-db --file=./db/schema.sql",
    "db:migrate": "wrangler d1 migrations apply flocka-db"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "@hono/zod-validator": "^0.2.1",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@cloudflare/workers-types": "^4.20231218.0",
    "wrangler": "^3.15.0",
    "typescript": "^5.3.3"
  }
}
